FROM golang:1.25-alpine

WORKDIR /app

# Install essential tools
# - make: for Makefile usage
# - git: for go mod download
# - curl: for downloading tools
# - gcc/musl-dev: for CGO (if needed)
# - tzdata: for timezone management (Asia/Seoul)
RUN apk add --no-cache make git curl gcc musl-dev tzdata bash

# Set Timezone
ENV TZ=Asia/Seoul

# Install Air for hot reloading
RUN go install github.com/air-verse/air@latest

# Install Atlas CLI for migrations
RUN curl -sSf https://atlasgo.sh/sh | sh

# Install Tailwind CSS CLI (Standalone)
RUN curl -sLO https://github.com/tailwindlabs/tailwindcss/releases/latest/download/tailwindcss-linux-x64 && \
    chmod +x tailwindcss-linux-x64 && \
    mv tailwindcss-linux-x64 /usr/local/bin/tailwindcss

# Copy module files first for caching
COPY go.mod go.sum ./
RUN go mod download

# Copy source code (optional, as we mount it in compose, but good for build checks)
COPY . .

# Default command: run air
CMD ["air", "-c", ".air.toml"]
